<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gyorgyitamas.szines.MainActivity">

    <Button
        android:background="@color/colorKek"
        android:id="@+id/buttonKek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kék"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="50dp" />

    <Button
        android:background="@color/colorSarga"
        android:id="@+id/buttonSarga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sárga"
        android:layout_below="@+id/buttonKek"
        android:layout_toRightOf="@+id/buttonZold"
        android:layout_toEndOf="@+id/buttonZold"
        android:layout_marginLeft="50dp" />


    <Button
        android:background="@color/colorZold"
        android:id="@+id/buttonZold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="49dp"
        android:text="Zold"
        android:layout_marginLeft="50dp" />
    />

    <Button
        android:background="@color/colorPiros"
        android:id="@+id/buttonPiros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Piros"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/buttonZold"
        android:layout_toEndOf="@+id/buttonZold"
        android:layout_marginLeft="50dp" />

</RelativeLayout>
